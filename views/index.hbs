<div class="settingsItem settingsItem-terrain">
    <div class="header">
        <h1>Terrain.</h1>
        <img src="../images/close.svg" alt="">
    </div>

    <div class="content">
        <div class="item enable">
            <h3>Erosion</h3>
            <div class="buttons">
                <img src="../images/configure/reset.svg" alt="" title="Reset Mesh Rotation.">
                <label class="switch" title="Toggle Mesh Spin.">
                    <input type="checkbox">
                    <span class="slider round"></span>
                </label>
            </div>
        </div>
        <div class="item erodeSeed">
            <h3>Custom Seed</h3>
            <div class="buttons">
                <img src="../images/configure/reset.svg" alt="">
                <label class="switch">
                    <input type="checkbox">
                    <span class="slider round"></span>
                </label>
            </div>
        </div>
        <div class="customSeed">
            <input type="text" name="myfile" />
            <button class="btn">Regenerate</button>
        </div>
    </div>

    <div class="rangeInputs">
        <div class="top">
            <div class="input resolution">
                <h2>Resolution</h2>
                <input type="range" name="" min='0' max='1' step='0.25' default='0' class='rangeSlider'
                    title="Number Of Verts along one side of the mesh.">
                <div class="label">
                    <input type="text" placeholder="128">
                </div>
            </div>

            <div class="input scale">
                <h2>Height Scale</h2>
                <input type="range" name="" min='0' max='1' step='0.1' class='rangeSlider'
                    title="Height of Final Terrain.">
                <div class="label">
                    <input type="text" placeholder="8">
                </div>

            </div>
        </div>
        <div class="top">
            <div class="input noiseScale">
                <h2>Noise Scale</h2>
                <input type="range" name="" min='0' max='1' step='0.1' default='0' class='rangeSlider'
                    title="Number Of Verts along one side of the mesh.">
                <div class="label">
                    <input type="text" placeholder="6">
                </div>
            </div>

            <div class="input persistance">
                <h2>Persistance</h2>
                <input type="range" name="" min='0' max='1' step='0.1' class='rangeSlider'
                    title="Height of Final Terrain.">
                <div class="label">
                    <input type="text" placeholder="2">
                </div>

            </div>
        </div>

        <div class="top">
            <div class="input lacunarity">
                <h2>Lacunarity</h2>
                <input type="range" name="" min='0' max='1' step='0.1' default='0' class='rangeSlider'
                    title="Number Of Verts along one side of the mesh.">
                <div class="label">
                    <input type="text" placeholder="2">
                </div>
            </div>

            <div class="input octaves">
                <h2>Octaves</h2>
                <input type="range" name="" min='0' max='1' step='0.1' class='rangeSlider'
                    title="Height of Final Terrain.">
                <div class="label">
                    <input type="text" placeholder="8">
                </div>

            </div>
        </div>


    </div>

</div>

